
<h1>¡¡¡¡¡¡Hoto!!!!</h1>

  <table id='game-board'>

  <tr>
<% @board.each do |row|          %>



  <% row.each do |square| %>
<%        if square.colour == 'red'      %>

            <td class='red'>
<%=         square.height             %>
            </td>

<%        elsif square.colour == 'blue'      %>
       
            <td class='blue'>
<%=         square.height             %>
            </td>

<%        else                               %>
       
            <td class='normal'>
<%=         square.height             %>
            </td>
<%  end                                       %>

<%    end %>
  </tr>
<% end %>

</table>
