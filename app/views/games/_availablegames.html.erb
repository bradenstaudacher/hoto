<h3>Join Game</h3>
<table id="join-game-list" class="table table-striped table-hover header-fixed">

  <tbody>
  <thead>
    <th class='column-title'>White</th>
    <th class='column-title'>Created</th>
    <th class='column-title'>Join</th>
  </thead>

  <% @games.each do |game| %>
    <% if game.active == true %>
      <tr data-link="<%= game %>">
        <% if game.users.length < 2 %>
          <% game.users.each do |user| %>
            <td><%= link_to user.name, user_path(user) %><%= " (" + user.current_rating.to_s + ")" %></td>
          <% end %>
          <td><%= time_ago_in_words(game.created_at) %> ago</td> 
          <% if @player_id%>
            <td><%= link_to 'Join', game %>  </td>
          <% else %>
            <td><%= link_to 'Login to join', new_session_path %>  </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  <% end %>


  </tbody>
</table>


<% if @player_id %>
  <h3>Your Games</h3>
    <% if User.find(@player_id).games.length > 0 %>
      <table id="game-list" class="table table-striped table-hover header-fixed">
        <tbody>
          <thead>
            <th class='column-title'>White</th>
            <th class='column-title'>Black</th>
            <th class='column-title'>Moves</th>
            <th class='column-title'>Join</th>
          </thead>
          <% @games.each do |game| %>
            <% if game.active == true && (game.users.where(id: @player_id)[0] != nil) %>
              <tr data-link="<%= game %>">
                <% if game.users.length == 2 %>
                  <% game.users.each do |user| %>
                    <td><%= link_to user.name, user_path(user) %><%= " (" + user.current_rating.to_s + ")" %></td>
                  <% end %>
                <td><%= game.moves_counter %></td> 
                  <td><%= link_to 'Play', game %>  </td>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p> Join a game above to get started! </p>
    <% end %>
<% end %>

<h3>Spectate Game</h3>
<table id="game-list" class="table table-striped table-hover header-fixed">

  <tbody>
  <thead>
    <th class='column-title'>White</th>
    <th class='column-title'>Black</th>
    <th class='column-title'>Moves</th>
    <th class='column-title'>Spectate</th>
  </thead>

  <% @games.each do |game| %>
    <% if game.active == true && (game.users.where(id: @player_id)[0] == nil) %>
      <tr data-link="<%= game %>">
        <% if game.users.length == 2 %>
          <% game.users.each do |user| %>
            <td><%= link_to user.name, user_path(user) %><%= " (" + user.current_rating.to_s + ")" %></td>
          <% end %>
          <td><%= game.moves_counter %></td> 
          <td><%= link_to 'Spectate', game %>  </td>
        <% end %>
      </tr>
    <% end %>
  <% end %>


  </tbody>
</table>