<table id="game-list" class="table table-striped table-hover">

  <tbody>
  <thead>
    <th class='column-title'>User</th>
    <th class='column-title'>User 2</th>
    <th class='column-title'>Spectate</th>
  </thead>

    <% @games.each do |game| %> 
    <tr data-link="<%= game %>">
      <% if game.users.count == 2 %>
        <% game.users.each do |user| %>
          <td><%= user.name %>  </td> 
        
        <% end %> 
          <td><%= link_to 'Spectate', game %>  </td>

      <% else %>
        <% game.users.each do |user| %>
          <td><%= user.name %>  </td>
          <td></td> 
          <td><%= link_to 'Join Game', game %>  </td>
        <% end %>
      <% end %>

    </tr>
    <% end %>


  </tbody>
</table>