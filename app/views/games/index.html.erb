<h1>Listing Games</h1>

<section id='options'>
  <h2 id="host-button"> Host Game </h2>
  <button id="create-game-button"> Create Game </button>
</section>
<table id="game-list">

  <tbody >
    <% @games.each do |game| %>
      <tr>

        <td><%= link_to game.id, game %>  </td>
        <% if game.users.count == 2 %>
          <% game.users.each do |user| %>
            <td><%= user.name %>  </td> 
          <% end %> 

        <% else %>
          <% game.users.each do |user| %>
            <td><%= user.name %>  </td> 
          <% end %>
          <td><%= link_to 'Join Game', game %>  </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>